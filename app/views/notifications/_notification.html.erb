<%= button_to mark_as_read_notification_path(notification), method: :post, class: "w-full text-left px-4 py-3 border-b border-slate-700/50 hover:bg-slate-700/50 transition-colors block group" do %>
  <div class="flex items-center space-x-3">
    <!-- Icon/Favicon -->
    <div class="flex-shrink-0">
      <% if notification.params && notification.params["favicon_url"] %>
        <img src="<%= notification.params["favicon_url"] %>" class="h-8 w-8 rounded bg-white p-0.5 object-contain">
      <% else %>
        <div class="h-8 w-8 rounded bg-slate-700 flex items-center justify-center">
          <svg class="h-4 w-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </div>
      <% end %>
    </div>

    <!-- Content -->
    <div class="flex-1 min-w-0">
      <div class="flex justify-between items-start">
        <p class="text-sm font-medium text-white truncate <%= 'opacity-50' if notification.read_at? %>">
          <%= notification.title %>
        </p>
        <% unless notification.read_at? %>
          <span class="h-2 w-2 rounded-full bg-blue-500 ml-2"></span>
        <% end %>
      </div>
      <% if notification.params && notification.params["stats"] %>
         <p class="text-xs text-slate-400 mt-0.5 font-mono"><%= notification.params["stats"] %></p>
      <% else %>
         <p class="text-xs text-slate-400 mt-0.5"><%= notification.body %></p>
      <% end %>
      <p class="text-[10px] text-slate-500 mt-1 <%= 'opacity-50' if notification.read_at? %>">
        <%= time_ago_in_words(notification.created_at) %> ago
      </p>
    </div>
  </div>
<% end %>
