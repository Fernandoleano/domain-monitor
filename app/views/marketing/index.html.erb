<div class="relative pt-32 pb-20 sm:pt-40 sm:pb-24 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
    <h1 class="text-5xl sm:text-7xl font-extrabold text-white tracking-tight mb-8">
      Monitor your infrastructure <br>
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-cyan-400">without the noise.</span>
    </h1>
    <p class="mt-4 text-xl text-slate-400 max-w-2xl mx-auto mb-10">
      Professional-grade uptime monitoring with rich telemetry, instant alerts, and a beautiful dark-mode dashboard.
    </p>
    <div class="flex justify-center gap-4">
      <a href="<%= new_registration_path %>" class="px-8 py-4 bg-indigo-600 hover:bg-indigo-700 text-white rounded-xl font-bold text-lg shadow-xl shadow-indigo-500/20 hover:shadow-indigo-500/40 transition-all transform hover:-translate-y-1">
        Start Monitoring Free
      </a>
      <a href="#how-it-works" class="px-8 py-4 bg-slate-800 hover:bg-slate-700 text-white rounded-xl font-bold text-lg border border-slate-700 transition-all">
        Learn More
      </a>
    </div>
  </div>
  
  <!-- Background Glow -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none opacity-20">
    <div class="absolute top-[20%] left-[20%] w-96 h-96 bg-indigo-500 rounded-full blur-3xl mix-blend-screen"></div>
    <div class="absolute top-[30%] right-[20%] w-96 h-96 bg-cyan-500 rounded-full blur-3xl mix-blend-screen"></div>
  </div>
</div>

<!-- Video / Demo Section -->
<div id="how-it-works" class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 -mt-12 relative z-20 mb-24">
  <div class="bg-slate-800 rounded-2xl border border-slate-700 shadow-2xl overflow-hidden ring-1 ring-white/10">
    <div class="aspect-w-16 aspect-h-9 bg-slate-900 flex items-center justify-center relative group cursor-pointer" 
         data-controller="video" 
         data-action="click->video#play">
      
      <!-- Placeholder: Visible by default (no hidden class) -->
      <div data-video-target="placeholder" class="absolute inset-0 w-full h-full text-center">
        <img src="https://raw.githubusercontent.com/Fernandoleano/domain-monitor/main/docs/assets/dashboard.png" alt="Dashboard Preview" class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity">
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-20 h-20 bg-indigo-600 rounded-full flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform hover:bg-indigo-500">
            <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
          </div>
        </div>
      </div>

      <!-- Video Framework: Hidded by default -->
      <div data-video-target="frame" class="hidden absolute inset-0 w-full h-full bg-black z-50">
        <!-- JS will inject iframe here -->
      </div>
    </div>
  </div>
</div>

