{
  "manifest_version": 3,
  "name": "Domain Monitor Adder",
  "version": "1.0",
  "description": "Instantly monitor the current site with Domain Monitor",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
  }
}
