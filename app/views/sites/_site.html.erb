<div id="<%= dom_id site %>" class="relative bg-slate-800 rounded-lg border border-slate-700 shadow-sm overflow-hidden hover:border-slate-600 transition-colors group">
  <!-- Status Bar -->
  <div class="absolute top-0 left-0 right-0 h-1 <%= site.up? ? 'bg-emerald-500' : (site.status == 'pending' ? 'bg-amber-400' : 'bg-rose-500') %>"></div>
  
  <div class="p-6">
    <div class="flex items-center justify-between mb-4">
       <div class="relative group-hover:scale-110 transition-transform duration-300">
          <%= image_tag "https://www.google.com/s2/favicons?domain=#{site.url}&sz=128", 
              class: "h-10 w-10 rounded-full bg-slate-700 p-1 ring-2 ring-offset-2 ring-offset-slate-800 #{site.up? ? 'ring-emerald-500 shadow-emerald-500/50' : (site.status == 'pending' ? 'ring-amber-500 shadow-amber-500/50' : 'ring-rose-500 shadow-rose-500/50')} shadow-lg",
              alt: "#{site.name} logo" 
          %>
       </div>
       <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium <%= site.up? ? 'bg-emerald-900 text-emerald-100' : 'bg-rose-900 text-rose-100' %>">
         <%= site.up? ? 'OPERATIONAL' : 'OFFLINE' %>
       </span>
    </div>

    <h3 class="text-lg font-semibold text-white truncate mb-1" title="<%= site.name %>"><%= site.name %></h3>
    <p class="text-sm text-slate-400 truncate font-mono mb-4"><%= site.url.sub(/^https?:\/\//, '') %></p>

    <div class="grid grid-cols-2 gap-4 border-t border-slate-700 pt-4 mt-4">
       <div>
         <p class="text-xs text-slate-500 uppercase font-semibold">Uptime</p>
         <p class="text-lg font-mono text-white"><%= site.uptime_percentage %>%</p>
       </div>
       <div>
         <p class="text-xs text-slate-500 uppercase font-semibold">Avg Latency</p>
         <p class="text-lg font-mono text-white"><%= site.avg_response_time %>ms</p>
       </div>
    </div>
  </div>

  <div class="bg-gray-800/50 px-6 py-3 border-t border-slate-700 flex justify-between items-center">
     <span class="text-xs text-slate-500">Last checked <%= time_ago_in_words(site.last_check&.created_at || Time.current) %> ago</span>
     <%= link_to "Telemetry â†’", site_path(site), class: "text-sm font-medium text-indigo-400 hover:text-indigo-300 transition-colors" %>
  </div>
</div>
